{
  "extends": "airbnb/base",

  "parser": "babel-eslint",

  "plugins": [
    "babel"
  ],

  "rules": {
    "semi": [2, "never"],
    "no-trailing-spaces": [2, { "skipBlankLines": true }],
    "default-case": 0,
    "no-unused-expressions": [2, {
      "allowShortCircuit": true,
      "allowTernary": true
    }],
    "no-shadow": 0,
    "new-cap": 0,
    "no-loop-func": 0,
    "no-var": 0,
    "func-names": 0,
    "prefer-spread": 0,
    "prefer-rest-params": 0,

    "import/no-unresolved": 0
  }
}
